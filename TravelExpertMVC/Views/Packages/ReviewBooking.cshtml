@model TravelExpertMVC.Models.BookingViewModel

@{
    ViewData["Title"] = "ReviewBooking";
}

<div class="container ">
    <div class="min-vh-100 d-flex align-items-center justify-content-center">
        <div class="bg-white text-black rounded shadow p-4 p-md-5 w-100" style="max-width: 500px;">
            <h2 class="text-center text-primary mb-4">Review Booking</h2>

           <form asp-action="ReviewBooking" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" style="display:none">
                    <label asp-for="PackageID" class="control-label" ></label>
                    <p class="form-control-plaintext" style="color: white;">@Model.PackageID</p>
                    <input type="hidden" asp-for="PackageID" value="@Model.PackageID" />
                    <span asp-validation-for="PackageID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PackageName" class="control-label"><strong>Package Name</strong></label>
                    <p class="form-control-plaintext" style="color: black;">@Model.PackageName</p>
                    <input type="hidden" asp-for="PackageName" value="@Model.PackageName" />
                    <span asp-validation-for="PackageName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="StartDate" class="control-label"><strong>Start Date</strong></label>
                    <p class="form-control-plaintext" style="color: black;">@Model.StartDate</p>
                    <input type="hidden" asp-for="StartDate" value="@Model.StartDate" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EndDate" class="control-label"><strong>End Date</strong></label>
                    <p class="form-control-plaintext" style="color: black;">@Model.EndDate</p>
                    <input type="hidden" asp-for="EndDate" value="@Model.EndDate" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="control-label"><strong>Package Description</strong></label>
                    <p class="form-control-plaintext" style="color: black;">@Model.Description</p>
                    <input type="hidden" asp-for="Description" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BasePrice" class="control-label"><strong>Price</strong></label>
                    <p class="form-control-plaintext" style="color: black;">@Model.BasePrice.ToString("C")</p>
                    <input type="hidden" asp-for="BasePrice" value="@Model.BasePrice" />
                    <span asp-validation-for="BasePrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Travellers" class="control-label"><strong>Number of Travellers</strong></label>
                    <input asp-for="Travellers" class="form-control" min="1" max="10" value="1" />
                    <span asp-validation-for="Travellers" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TripType" class="control-label"><strong>Trip Type</strong></label>
                    <select asp-for="TripType" class="form-control" asp-items="@ViewBag.List"></select>
                    <span asp-validation-for="TripType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="submit" value="Add to cart" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

